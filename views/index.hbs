<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                <form method="POST" action="/">
                    <div class="form-group">
                        <label for="item">Item</label>
                        <input type="text" id="item" class="form-control" name="item" required>
                    </div>
                    <div class="form-group">
                        <label for="qty">Quantity</label>
                        <input type="number" id="qty" class="form-control" name="qty" min="1" max="99" required>
                    </div>
                    <div class="form-group">
                        <label for="price">Unit Price</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">$</div>
                            </div>
                            <input type="number" id="price" class="form-control" name="price" min="0.10" step="0.05" placeholder="Cost per unit">
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="Add to cart" class="btn btn-primary btn-lg <!--float-right-->">
                    </div>

                    <input type="hidden" name="cartState" value="{{ cartState }}">
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Unit price</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each myCart}}
                        <tr>
                            <td>{{ this.item }}</td>
                            <td>{{ this.qty }}</td>
                            <td>{{ this.price }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>